-- Describe CARDCOLORS
CREATE TABLE Symbols
(
	SymbolId VARCHAR(10) PRIMARY KEY NOT NULL AUTOINCREMENT,
	Symbol VARCHAR(2),
	Value INT,
	Color VARCHAR(20)
)

-- Describe CARDCOMPONENT
CREATE TABLE CardComponent
(
	CardId INTEGER PRIMARY KEY NOT NULL AUTOINCREMENT,
	CardName VARCHAR(60),
	Manacost VARCHAR(50),
	Power INT,
	Toughness INT,
	CardText VARCHAR(500),
	CardExpansion VARCHAR(25),
	CardRarity VARCHAR(25),
	CONSTRAINT UN_CardName UNIQUE (CardName)
)

-- Describe CARDTYPE
CREATE TABLE CardType
(
	
	TypeId INT NOT NULL PRIMARY KEY AUTOINCREMENT,
	Type VARCHAR(50)
)

CREATE TABLE TypeLink 
(
	CardId INT NOT NULL, 
	TypeId INT NOT NULL, 
	PRIMARY KEY (CardId, TypeId),
	FOREIGN KEY (CardId) REFERENCES CardComponent(CardId),
	FOREIGN KEY (TypeId) REFERENCES cardtype(TypeId)
)

CREATE TABLE CostSymbols
(
	CSID INT PRIMARY KEY NOT NULL AUTOINCREMENT, 
	CardId INT NOT NULL,
	SymbolId INT NOT NULL, 
	FOREIGN KEY (CardId) REFERENCES CardComponent(CardId)
)

